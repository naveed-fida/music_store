{{#if quantity}}
  <label for="cart_toggle">{{quantity}} Item</label>
  <input type="checkbox" id="cart_toggle">
  <div id="items">
    <table>
      <thead>
        <td>Item</td>
        <td>Quantity</td>
        <td>Price</td>
        <td></td>
      </thead>
      <tbody>
      {{#each items}}
      <tr data-id="{{id}}">
        <td>{{title}}</td>
        <td>{{quantity}}</td>
        <td>${{format_price price}}</td> 
        <td><a href="#">Remove</a></td>
      </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2"><strong>Total</strong></td>
          <td colspan="2">{{format_price total}}</td>
        <tr>
      </tfoot>
    </table>
  </div>
{{else}}
  <p>0 items</p>
{{/if}}